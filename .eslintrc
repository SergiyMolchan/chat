{
	"env": {
		"commonjs": true,
		"es6": true,
		"node": true
	},
	"plugins": [
		"security"
	],
	"extends": [
		"eslint:recommended",
		"plugin:security/recommended"
	],
	"globals": {
		"__dirname": true,
		"process": true,
		"log": true,
		"config": true
	},
	"parserOptions": {
		"ecmaVersion": 2018
	},
	"rules": {
		"security/detect-object-injection": "off",
		"indent": [
			"error",
			"tab",
			{
				"SwitchCase": 1
			}
		],
		"quotes": [
			"error",
			"single"
		],
		"semi": [
			"error",
			"always"
		],
		"no-console": [
			"off"
		],
		"no-multiple-empty-lines": [
			"error",
			{
				"max": 2,
				"maxEOF": 1,
				"maxBOF": 0
			}
		],
		"no-trailing-spaces": [
			"error"
		],
		"eol-last": [
			"error"
		],
		"no-empty": [
			"error",
			{
				"allowEmptyCatch": true
			}
		],
		"max-len": [
			"error",
			{
				"code": 120,
				"ignoreComments": true,
				"ignoreUrls": true,
				"ignoreTemplateLiterals": true,
				"ignoreStrings": true
			}
		],
		"object-curly-spacing": [
			"error",
			"always",
			{
				"arraysInObjects": false
			}
		],
		"space-in-parens": [
			"error",
			"never"
		],
		"comma-spacing": [
			"error",
			{
				"before": false,
				"after": true
			}
		],
		"key-spacing": [
			"error",
			{
				"beforeColon": false,
				"afterColon": true
			}
		],
		"keyword-spacing": [
			"error",
			{
				"before": true,
				"after": true
			}
		],
		"arrow-spacing": [
			"error",
			{
				"before": true,
				"after": true
			}
		],
		"no-spaced-func": [
			"error"
		],
		"space-before-function-paren": [
			"error",
			{
				"anonymous": "always",
				"named": "never",
				"asyncArrow": "always"
			}
		],
		"block-spacing": [
			"error",
			"always"
		],
		"space-before-blocks": [
			"error",
			"always"
		],
		"unicode-bom": [
			"error",
			"never"
		]
	}
}
